source 'https://rubygems.org'

gem 'rails', '4.0.0'

group :development, :test do
  gem 'rspec-rails', '~> 3.0.0'
  gem 'pry-debugger'
end
group :development do
  gem 'sqlite3'
end
group :production do
  gem 'pg'
  # For rails on heroku without precompiling assets.
  gem 'rails_12factor' 
end
group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Html5 boilerplate
gem 'html5-rails'

# Scaffolding
gem 'factory_girl_rails'

# Asset stuff
gem 'sass-rails'
gem 'compass-rails'
gem 'uglifier'
gem 'compass-h5bp'
gem 'jquery-rails'

# For http calls
gem 'faraday'

# Fake Content
gem 'faker'
